---
interface Link{
  href:string;
  text:string;
}
interface Props{
  title:string;
  links?:Link[];
}
const {title,links} = Astro.props;
let visible = false;
---
<aside class=`w-[${visible?0:"fit"}] border px-4 py-2`>
  <div>
    <h2>{title}</h2>
  </div>
  <nav>
    <ul>
        { links&&
          links.map(link=>{
            return <li>
              <a href={link.href}>{link.text}</a>
            </li>
          })
        }
    </ul>
  </nav>
</aside>
